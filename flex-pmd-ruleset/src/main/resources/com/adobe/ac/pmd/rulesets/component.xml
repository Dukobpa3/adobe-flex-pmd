<?xml version="1.0"?>
<ruleset name="Custom component rules" xmlns="http://pmd.sf.net/ruleset/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
	xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
	<description>
      The Component Ruleset contains a collection of good practices related to custom component development.
   </description>
	<rule
		class="com.adobe.ac.pmd.rules.component.UpdateChildrenNumberInUpdateDisplayListRule"
		message="Do not add or remove displayable children from updateDisplayList">
		<description>Add children in createChildren</description>
		<priority>1</priority>
		<example></example>
	</rule>
	<rule
		class="com.adobe.ac.pmd.rules.component.NoChildrenAddedInCreateChildrenRule"
		message="No children are added from createChildren">
		<priority>1</priority>
		<example></example>
	</rule>
	<rule
		class="com.adobe.ac.pmd.rules.component.AddChildNotInCreateChildrenRule"
		message="You must add child only inside the createChildren method">
		<priority>1</priority>
	</rule>
</ruleset>