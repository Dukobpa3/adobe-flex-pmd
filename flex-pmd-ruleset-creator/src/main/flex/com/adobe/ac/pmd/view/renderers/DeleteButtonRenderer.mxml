<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
   buttonMode="true"
   mouseChildren="false"
   useHandCursor="true"
   toolTip="Remove this rule ({ rule.shortName }) from your ruleset..."
   click="onClick()"
   creationComplete="onCreationComplete()"
   >
   
   <mx:Metadata>
      [Event(name="ruleRemoved", type="flash.events.Event")]
   </mx:Metadata>
   
   <mx:Script>
      <![CDATA[
         import mx.events.FlexEvent;
         import mx.controls.AdvancedDataGrid;
         import mx.controls.listClasses.ListBase;
         import com.adobe.ac.pmd.model.Rule;
         
         public static const RULE_REMOVED : String = "ruleRemoved";
         
         [Bindable]
         private var rule : Rule;
         
         override public function set data( value : Object ) : void
         {
            super.data = value;
            
            rule = value as Rule;
            visible = false;
         }
         
         override public function set visible(value:Boolean):void
         {
            super.visible = value;
         }
         
         private function onCreationComplete() : void
         {
            AdvancedDataGrid( owner ).addEventListener( Event.CHANGE, onGridChange );
         }
         
         private function onGridChange( event : Event ) : void
         {
            visible = AdvancedDataGrid( owner ).selectedItem == rule && rule != null;
         }
         
         private function onClick() : void
         {
            if ( rule )
            {
               rule.remove();
               
               dispatchEvent( new Event( RULE_REMOVED, true ) );
            }
         }
         
      ]]>
   </mx:Script>
   
   <mx:Image
      source="@Embed(source='/assets/icon_tool_trash2.png')"
      horizontalCenter="0" 
      verticalCenter="0"
      />
      
</mx:Canvas>
